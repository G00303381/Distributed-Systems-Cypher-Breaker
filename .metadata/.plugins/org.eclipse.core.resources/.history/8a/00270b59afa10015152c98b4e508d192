package ie.gmit.sw;

import java.util.*;
import java.util.concurrent.*;

public class VigenereRequestManager
{
	private static final int maxLength = 10;
	private BlockingQueue<Request> queue = new ArrayBlockingQueue<Request>(maxLength);
	private Map<Long, String> out = new ConcurrentHashMap<Long, String>();
	private VigenereHandler vigHandler;
	private String cypherText;
	
	public void add(final Request r)
	{
		try
		{
			//queue.put(r)//blocks if queue full
			new Thread(new Runnable()
			{
				public void run()
				{
					try
					{
						queue.put(r);
						out.put(r.getJobNumber(), r.getCypherText());
						vigHandler = new VigenereHandler(queue, out);
						out.put(r.getJobNumber(), vigHandler.returnRes());
					}
					catch(Exception e)
					{
						System.out.println(e);
					}
				}
			}).start();
		}
		catch(Exception e)
		{
			System.out.println(e);
		}
	}
	
	public String getResult(long jobNumber)
	{
		if(out.containsKey(jobNumber))
		{
			return out.get(jobNumber);
		}

		else
		{
			return null; //no result
		}
	}
}